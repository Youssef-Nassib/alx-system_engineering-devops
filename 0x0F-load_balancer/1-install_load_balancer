#!/usr/bin/env bash
# install load balancer

sudo apt-get -y update
sudo apt-get -y install haproxy
sudo chown $USER:USER /etc/haproxy/haproxy.cfg

echo "
frontend cryptotechcoder
    bind *:80
    mode http
    default_backend app

backend app
    balance roundrobin
    server 512165-web-01 34.229.186.172 check
    server 512165-web-02 54.174.69.12:80 check" >> /etc/haproxy/haproxy.cfg

sudo service haproxy restart
